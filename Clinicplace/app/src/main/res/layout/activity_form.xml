<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.example.anthony.clinicplace.FormActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLINICPLACE"
        style="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:textSize="35sp"
        android:padding="20dp"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/textCorreo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Correo Electronico:"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="14dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />
    <TextView
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="ola k ace"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintLeft_toRightOf="@+id/textCorreo"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="14dp"

        />
    <TextView
        android:id="@+id/textUsuario"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        app:layout_constraintTop_toBottomOf="@+id/textCorreo"
        android:layout_marginTop="14dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />
    <EditText
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Ingrese nombre usuario"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        app:layout_constraintTop_toBottomOf="@+id/textCorreo"
        app:layout_constraintLeft_toRightOf="@+id/textUsuario"
           android:layout_marginTop="0dp" />
    <TextView
        android:id="@+id/textContraseña"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Contraseña: "
        app:layout_constraintTop_toBottomOf="@+id/textUsuario"
        android:layout_marginTop="30dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />


    <EditText
        android:id="@+id/contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Ingrese contraseña"
        app:layout_constraintTop_toBottomOf="@+id/textUsuario"
        app:layout_constraintLeft_toRightOf="@+id/textContraseña"
        android:layout_marginTop="7dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
     />
    <TextView
        android:id="@+id/textContraseña2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Repita Contraseña: "
        app:layout_constraintTop_toBottomOf="@+id/textContraseña"

        android:layout_marginTop="30dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />


    <EditText
        android:id="@+id/contraseña2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Ingrese contraseña"
        app:layout_constraintTop_toBottomOf="@+id/textContraseña"
        app:layout_constraintLeft_toRightOf="@+id/textContraseña2"
        android:layout_marginTop="15dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"

        />
    <ProgressBar
        android:id="@+id/robustez"
        app:layout_constraintTop_toBottomOf="@+id/textContraseña2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:max="100"
        android:maxHeight="20dp"
        android:minHeight="20dp"
        android:progress="0"
        android:secondaryProgress="100"


        />
    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/robustez"
        android:text="No ingresado"
        />

    <Button
        android:id="@+id/enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintTop_toBottomOf="@+id/robustez"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_margin="20dp"
        />
</android.support.constraint.ConstraintLayout>
