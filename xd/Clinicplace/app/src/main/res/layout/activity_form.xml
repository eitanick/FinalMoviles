<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.example.anthony.clinicplace.FormActivity"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLINICPLACE"
        style="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:textSize="35sp"
        android:padding="20dp"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo Electronico:"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="14dp"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Ingrese correo electronico"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"

    />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contrase単a: "
        app:layout_constraintTop_toBottomOf="@+id/email"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Ingrese contrase単a"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
     />
    <TextView
        android:id="@+id/txtPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repita Contrase単a: "
        app:layout_constraintTop_toBottomOf="@+id/password"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        />


    <EditText
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Repita contrase単a"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword2"
             style="@style/Base.TextAppearance.AppCompat.Subhead"

        />
    <ProgressBar
        android:id="@+id/passwordStrength"
        app:layout_constraintTop_toBottomOf="@+id/password2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:max="100"
        android:maxHeight="20dp"
        android:minHeight="20dp"
        android:progress="0"
        android:secondaryProgress="100"


        />
    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/passwordStrength"
        android:text="No ingresado"
        />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintTop_toBottomOf="@+id/progress"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
          />
</android.support.constraint.ConstraintLayout>
